ns NSharp.Tests

use System

public struct MyStruct
    fn x int
    fn y str

abstract class MyClass
    fn Test()
        if true
            Console.WriteLine("always")
        
        if res = Accept(TokenType.Comma), res.Success
            Console.WriteLine("success")
        
        if x
            is 1
                Console.WriteLine("one")
            is 2
                Console.WriteLine("two")
        
        if x = Calculate(), x
            is 1
                Console.WriteLine("one")
            is 2
                Console.WriteLine("two")
